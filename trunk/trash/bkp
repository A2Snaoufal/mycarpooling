  function script2() {
     var e = document.getElementById("login");
     if (e.style.visibility == 'visible') {
         e.style.visibility = 'hidden';
         e.style.display = 'none';
     } else {
         e.style.visibility = 'visible';
         e.style.display = 'block';
     }
 }
